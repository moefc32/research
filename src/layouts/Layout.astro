---
import '../styles/global.css';
import 'aos/dist/aos.css';
import { Toasts } from 'svoast';

import Header from '../components/Header.svelte';
import Footer from '../components/Footer.svelte';
import RegisterSW from '../components/RegisterSW.svelte';

const { pageTitle } = Astro.props;

const siteTitle = `${import.meta.env.PUBLIC_APP_NAME} | Faizal Chan's Website`;
const siteDescription =
    'Access a collection of research publications by Faizal Chan, covering studies, articles, and scholarly insights.';
const openGraph = {
    title: import.meta.env.PUBLIC_APP_NAME,
    siteName: 'Faizal Chan\'s Website',
    description: 'Collection of research publications by Faizal Chan.',
};
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/png" href="/og.png" />

        <title>
            {pageTitle ? `${pageTitle} | ${openGraph.title}` : siteTitle}
        </title>
        <meta name="description" content={siteDescription} />
        <meta name="generator" content={Astro.generator} />

        <meta property="og:title" content={openGraph.title} />
        <meta property="og:site_name" content={openGraph.siteName} />
        <meta property="og:description" content={openGraph.description} />
        <meta property="og:image" content="/og.png" />
        <meta property="og:type" content="website" />

        <script
            src="https://www.googletagmanager.com/gtag/js?id=UA-131278165-1"
            async></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];

            function gtag() {
                dataLayer.push(arguments);
            }

            gtag('js', new Date());
            gtag('config', 'UA-131278165-1');
        </script>
    </head>

    <body
        class="flex flex-col w-full min-h-screen overflow-auto"
        data-sveltekit-preload-data="hover"
        data-theme="light"
    >
        <div style="display: contents">
            <Header client:load />
            <slot />
            <Footer client:load />
            <Toasts client:load position={'bottom-center'} />
        </div>
        <RegisterSW client:load />
    </body>
</html>
